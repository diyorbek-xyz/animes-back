<form id='dashboard' action='/account?_method=PUT' enctype="multipart/form-data" method='post'>
	<img class='avatar' src={{dashboard.avatar}} height="300px"/>
	<img class='banner' src={{dashboard.banner}} />
	<div>
		<label>Avatar: <input type='file' name='avatar' value={{dashboard.avatar}} /></label>
		<label>Banner: <input type='file' name='banner' value={{dashboard.banner}} /></label>
		<label>Username: <input type='text' name='username' value={{dashboard.username}} /></label>
		<label>First name: <input type='text' name='first_name' value={{dashboard.first_name}} /></label>
		<label>Last name: <input type='text' name='last_name' value={{dashboard.last_name}} /></label>
		<div style='display: flex; gap: 10px;'>
			<a class='link'>
				<button href='/logout'>Log Out</button>
			</a>
			<input type='submit' value='Save' />
		</div>
	</div>
</form>