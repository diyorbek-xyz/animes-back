<header id='header'>
	<h2>Animes</h2>
	<button popovertarget='create-account' popovertargetaction='toggle'>Add</button>
</header>

<article id='animes'>
	{{#each anime}}
		<article class='anime' data-index='{{@index}}'>
			<img src='/{{poster}}' alt='{{anime}}' width='100%' style='border-radius: inherit;' />
			<div style='display: grid;'>
				<div class='label'>
					<span class='title'>Poster path:</span>
					<a class='value path' href='/{{poster}}' rel='external'>{{poster}}</a>
				</div>
				<div class='label'>
					<span class='title'>Name:</span>
					<span class='value'>{{name}}</span>
				</div>
				<div class='label'>
					<span class='title'>Studio:</span>
					<span class='value'>{{studio}}</span>
				</div>
				<div class='label'>
					<span class='title'>Created:</span>
					<span class='value'>{{date createdAt}}</span>
				</div>
				<div class='label'>
					<span class='title'>Updated:</span>
					<span class='value'>{{date updatedAt}}</span>
				</div>
				<div>
					<form action="/api/anime?id={{_id}}&_method=DELETE" method="post">
						<input type="submit" value="Delete">
					</form>
				</div>
				<pre class="json">{{json this}}</pre>
			</div>
		</article>
	{{/each}}
	<article id='create-account' class='popover' popover='hint'>
		<fieldset>
			<legend>Create</legend>
			<form action='/api/anime?_method=POST' enctype='multipart/form-data' method='post'>
				<input type='file' name='poster' placeholder='Enter poster' required />
				<input type='text' name='name' placeholder='Enter Anime name' required />
				<input type='text' name='studio' placeholder='Enter studio' />
				<input type='submit' value='Create Anime' popovertargetaction='hide' />
			</form>
		</fieldset>
	</article>
</article>