{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["types", "./node_modules/@types"]
	},
	"include": ["src", "types"],
	"exclude": ["node_modules", "dist"]
}
